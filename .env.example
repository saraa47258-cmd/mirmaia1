# Mirmaia VPS (Nginx Proxy Manager) environment

# MySQL
MYSQL_ROOT_PASSWORD=change_this_root_password
MYSQL_DATABASE=mirmaia_pos
MYSQL_USER=mirmaia_user
MYSQL_PASSWORD=change_this_db_password
MYSQL_PORT=3306

# App ports exposed only to localhost (NPM will proxy to these)
BACKEND_PORT=3000
FRONTEND_PORT=3001
PHPMYADMIN_PORT=8081

# Backend auth
JWT_SECRET=change_this_super_long_random_secret

# Frontend build-time API URL (point to your API domain)
REACT_APP_API_URL=https://api.example.com/api
